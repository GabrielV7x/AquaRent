
<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://richmondholidays.com/application/files/3615/9645/7311/Richmond_1366_x_525-min.jpg);">
  <div class="container">
    <h1>Categories</h1>
    <p>Here you can choose among various nautics activities.</p>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  </div>
</div>

<h2>My nautique equipments</h2>


  <div class="main-container">
    <% @categories.each do |category| %>
      <div class="card p-5" style="background-image: url(http://kitt.lewagon.com/placeholder/cities/rio)">
        <%= category.name  %>
      </div>
      <%= link_to category_path(category), class:"text-decoration-none" do %>
        <%= category.name %>
      <% end %>
    <% end %>
  </div>
